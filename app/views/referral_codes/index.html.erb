<p id="notice"><%= notice %></p>

<h1>Referral Codes</h1>

<table>
  <thead>
    <tr>
      <th>Nonce</th>
      <th>Type</th>
      <th>Code</th>
      <th>Participant</th>
      <th>Used</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @referral_codes.each do |referral_code| %>
      <tr>
        <td><%= referral_code.nonce %></td>
        <td><%= referral_code.type %></td>
        <td><%= referral_code.code %></td>
        <td><%= referral_code.participant %></td>
        <td><%= referral_code.used %></td>
        <td><%= link_to 'Show', referral_code %></td>
        <td><%= link_to 'Edit', edit_referral_code_path(referral_code) %></td>
        <td><%= link_to 'Destroy', referral_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

